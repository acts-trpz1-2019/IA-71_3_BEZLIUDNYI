@model BookInputContainerViewModel
@{
    ViewBag.Title = "EditBook";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="billetWrapper">
    <div class="full_article_container">
        <h2>Редактировать аудиокнигу</h2>
        @if (Model.Type == "text")
        {
            using (Html.BeginForm("SaveTextBookChanges", "ManageModel"))
            {
                @Html.EditorFor(b => b.TextBookPresentation)
                <br />
                <input type="submit" value="Сохранить" />
            }
        }
        else if (Model.Type == "audio")
        {
            using (Html.BeginForm("SaveAudioBookChanges", "ManageModel"))
            {
                @Html.EditorFor(b => b.AudioBookPresentation)
                <br />
                <input type="submit" value="Сохранить" />
            }
        }
        <br />
    </div>
</div>